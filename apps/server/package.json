{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "bun --watch ./index.ts",
    "start": "bun ./index.ts",
    "lint": "bunx @biomejs/biome lint ./app/api",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run ./db/migrate.ts",
    "db:seed": "bun run ./server/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "format": "bunx @biomejs/biome format ./server --write"
  },
  "dependencies": {
    "@repo/rpc": "workspace:*",
    "@hono/node-server": "^1.11.4",
    "@hono/zod-validator": "^0.2.2",
    "@hookform/resolvers": "^3.3.4",
    "@neondatabase/serverless": "^0.9.3",
    "axios": "1.7.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "crypto-js": "^4.2.0",
    "drizzle-orm": "^0.31.2",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.4.7",
    "jsonwebtoken": "^9.0.2",
    "paystack-sdk": "^2.5.12",
    "postgres": "^3.4.3",
    "rimraf": "^5.0.5",
    "sharp": "^0.33.4",
    "superjson": "^2.2.1",
    "tslib": "^2.6.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.7",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.2",
    "@types/bcrypt": "^5.0.2",
    "@types/bun": "^1.1.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^17.0.45",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@typescript-eslint/parser": "^7.13.1",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.22.7",
    "eslint": "^8.44.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-tailwindcss": "^3.13.0",
    "pg": "^8.12.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "tsx": "^3.14.0",
    "typescript": "^5.5.0"
  },
  "browser": {
    "crypto": false,
    "stream": false
  }
}
